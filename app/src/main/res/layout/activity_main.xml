<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="@color/background">

    <ImageView
        android:id="@+id/number_1"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:scaleType="fitXY"
        android:src="@drawable/meowculator" />


    <EditText
        android:id="@+id/edit"
        android:layout_width="300dp"
        android:layout_height="135dp"
        android:background="@color/pink"
        android:gravity="end|bottom"
        android:textSize="40dp"
        android:textColor="@color/purple_200"/>

    <GridLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5">

        <Button
            android:id="@+id/ans"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:text="AN"
            android:textSize="25dp" />

        <Button
            android:id="@+id/clear"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:text="AC"
            android:textSize="25dp" />

        <Button
            android:id="@+id/back"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:text="CE"
            android:textSize="25dp" />

        <Button
            android:id="@+id/cheng"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:text="ร"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:text="1"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:text="2"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:text="3"
            android:textSize="25dp" />

        <Button
            android:id="@+id/chu"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:text="รท"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:text="4"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:text="5"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:text="6"
            android:textSize="25dp" />

        <Button
            android:id="@+id/jia"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:text="+"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:text="7"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:text="8"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:text="9"
            android:textSize="25dp" />

        <Button
            android:id="@+id/jian"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:text="-"
            android:textAllCaps="false"
            android:textSize="25dp" />

        <Button
            android:id="@+id/dian"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:text="."
            android:textSize="25dp" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:text="0"
            android:textSize="25dp" />

        <Button
            android:id="@+id/minus"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:text="+/-"
            android:textSize="25dp" />


        <ImageButton
            android:id="@+id/calculation"
            android:background="@drawable/equal"
            android:layout_marginTop="5dp"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:textSize="25dp" />
    </GridLayout>
</LinearLayout>